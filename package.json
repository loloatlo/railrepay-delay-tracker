{
  "name": "@railrepay/delay-tracker",
  "version": "0.1.0",
  "description": "RailRepay delay tracker service - monitors journeys for delays and triggers claims",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up -m ./migrations --migrations-schema delay_tracker --migrations-table pgmigrations --create-schema",
    "migrate:down": "node-pg-migrate down -m ./migrations --migrations-schema delay_tracker --migrations-table pgmigrations",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "node-pg-migrate": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "testcontainers": "^10.4.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "tsx": "^4.7.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
